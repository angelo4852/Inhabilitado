@using ConstanciaNoInhabilitado.Shared.Entities.Catalogos
@using ConstanciaNoInhabilitado.Shared.Entities.Login;

<MudItem xs="5">
    <MudTextField @bind-Value="_dependencia.Descripcion" Label="Introduce el nombre de la Dependencia" Variant="Variant.Outlined" />
</MudItem>

<MudItem xs="3">
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Style="width:200px;" OnClick="callEvent">Registra Dependencia</MudButton>
</MudItem>

@code
{
    [Parameter]
    public Dependencia? _dependencia { set; get; } = new Dependencia();

    [Parameter]
    public EventCallback<Dependencia> eventCallback { set; get; }


    private async Task callEvent()
    {
        await eventCallback.InvokeAsync(_dependencia);
    }
}
