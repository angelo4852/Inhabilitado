@using ConstanciaNoInhabilitado.Shared.Entities.Login;


<MudItem xs="5">
    <MudTextField @bind-Value="RegistrarCausaInhabilitacion.Descripcion" Label="Introduce la causa" Variant="Variant.Outlined" />
</MudItem>


<MudItem xs="3">
    <MudButton Variant="Variant.Filled" Color="Color.Secondary" Style="width:200px;" OnClick="callEvent">Registrar Causa de Inhabilitación</MudButton>
</MudItem>

@code
{
    [Parameter]
    public CausasInhabilitacion? RegistrarCausaInhabilitacion { get; set; } = new();
    [Parameter]
    public EventCallback<CausasInhabilitacion> eventCallback { get; set; }

    public async Task callEvent()
    {
        await eventCallback.InvokeAsync(RegistrarCausaInhabilitacion);
    }
}