@using ConstanciaNoInhabilitado.Client.Componentes.Todo;
@using ConstanciaNoInhabilitado.Client.Componentes.Admin;
@using ConstanciaNoInhabilitado.Client.Componentes.Catalogos;
@using ConstanciaNoInhabilitado.Client.Componentes.Reportes;
@using ConstanciaNoInhabilitado.Shared.Entities.Login;
@inject Blazored.SessionStorage.ISessionStorageService _sessionStorage

<MudTabs Elevation="1" Rounded="true" PanelClass="pa-6">
    <MudTabPanel Text="Mostrar Todo">
        <ChildContent>
            <MostoTodo MenuTotal="MenuGeneral" />
        </ChildContent>
        <TabWrapperContent>
            <MudTooltip Text="Mostrar Todo">
                @context
            </MudTooltip>
        </TabWrapperContent>
    </MudTabPanel>
    @if (MenuGeneral.Where(m => m.TipoMenu == TipoMenu.Admin).Count() > 0)
    {
        <MudTabPanel Text="Administración">
            <ChildContent>
                <Admin MenuAdmin="MenuGeneral.Where(m => m.TipoMenu == TipoMenu.Admin).ToList()" />
            </ChildContent>
            <TabWrapperContent>
                <MudTooltip Text="Administración">
                    @context
                </MudTooltip>
            </TabWrapperContent>
        </MudTabPanel>
    }
    @if (MenuGeneral.Where(m => m.TipoMenu == TipoMenu.Catalogo).Count() > 0)
    {
        <MudTabPanel Text="Catálogos">
            <ChildContent>
                <Catalogos MenuCatalogos="MenuGeneral.Where(m => m.TipoMenu == TipoMenu.Catalogo).ToList()" />
            </ChildContent>
            <TabWrapperContent>
                <MudTooltip Text="Catálogos">
                    @context
                </MudTooltip>
            </TabWrapperContent>
        </MudTabPanel>
    }
    @if (MenuGeneral.Where(m => m.TipoMenu == TipoMenu.Reporte).Count() > 0)
    {
        <MudTabPanel Text="Reportes">
            <ChildContent>
                <Reportes MenuReportes="MenuGeneral.Where(m => m.TipoMenu == TipoMenu.Reporte).ToList()" />
            </ChildContent>
            <TabWrapperContent>
                <MudTooltip Text="Reportes">
                    @context
                </MudTooltip>
            </TabWrapperContent>
        </MudTabPanel>
    }
   
</MudTabs>

